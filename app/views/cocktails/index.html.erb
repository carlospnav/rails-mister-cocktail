<div class="wrapper">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Cocktails</h1>

      <% @cocktails.each do |c| %>
        <%= link_to c.name, cocktail_path(c.id) %>
      <% end %>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= link_to "New cocktail", new_cocktail_path %>
    </div>
  </div>
</div>


