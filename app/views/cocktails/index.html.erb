<div class="container">
  <div class="wrapper">
    <div class="row">
      <% @cocktails.each do |c| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo.path, height: 333, width: 175, crop: :fit %>');">
            <div class="card-category">Cocktail</div>
            <div class="card-description">
              <h2>
                <%= link_to c.name, cocktail_path(c.id) %>
              </h2>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="wrapper">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-medium" %>
      </div>
    </div>
  </div>

</div>


